{
  "manifest_version": 2,
  "name": "JIRA Inflation Tracker",
  "description": "Facilitates bug resolvers to keep track on priority inflation on JIRA issues",
  "version": "1.0",
  "browser_action": {
    "default_title": "InflationTracker",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],
  "options_ui": {
    "page": "options_page.html",
    "chrome_style": true
  }
}